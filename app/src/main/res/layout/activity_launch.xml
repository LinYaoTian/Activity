<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rdc.activity.LaunchActivity"
    >

    <ImageView
        android:id="@+id/iv_cover_act_launch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_app_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iv_cover_launch"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/ll_app_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_app_ic_act_launch"
            android:layout_width="@dimen/dimenAppIcSize"
            android:layout_height="@dimen/dimenAppIcSize"
            android:src="@drawable/iv_app_ic_blue" />

        <TextView
            android:id="@+id/tv_app_name_act_launch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="#565656"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_message_act_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专注于校园活动的\n平台"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center|start"
            android:textColor="@color/black"
            />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
